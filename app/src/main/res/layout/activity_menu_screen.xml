<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_nemVeri"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Nem Oranı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nem" />

    <Button
        android:id="@+id/btn_sula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Çiçeğe su Ver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_sulandı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Çiçek sulandı"
        app:layout_constraintBottom_toTopOf="@+id/btn_iletisim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sula"
        app:layout_constraintVertical_bias="0.267" />

    <TextView
        android:id="@+id/txt_suHaznesiVeri"
        android:layout_width="147dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Su Haznesi Doluluk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toEndOf="@+id/txt_nemVeri"
        app:layout_constraintTop_toBottomOf="@+id/txt_suHaznesi" />

    <TextView
        android:id="@+id/txt_nem"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Nem Oranı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_suHaznesi"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Su Haznesi Doluluk Oranı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/txt_nem"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_hakkinda"
        android:layout_width="158dp"
        android:layout_height="57dp"
        android:background="@drawable/box"
        android:text="HAKKINDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sula"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_iletisim"
        android:layout_width="158dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/box"
        android:text="İLETİŞİM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_hakkinda"
        app:layout_constraintTop_toBottomOf="@+id/btn_sula"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>