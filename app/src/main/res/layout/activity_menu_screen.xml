<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_nemVeri"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Nem Oranı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/txt_nem"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sula"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Çiçeğe su Ver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_damla" />

    <Button
        android:id="@+id/btn_damla"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="DAMLAMA SULA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nem" />

    <Button
        android:id="@+id/btn_damla_kapat"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="DAMLAMA KAPAT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/btn_damla"
        app:layout_constraintTop_toBottomOf="@+id/txt_nemVeri" />

    <Button
        android:id="@+id/btn_sulandı"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="SULAMA KAPAT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/btn_sula"
        app:layout_constraintTop_toBottomOf="@+id/btn_damla_kapat" />

    <TextView
        android:id="@+id/txt_nem"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/box"
        android:gravity="center"
        android:text="Nem Oranı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_hakkinda"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/box"
        android:text="HAKKINDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sula"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_iletisim"
        android:layout_width="165dp"
        android:layout_height="77dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/box"
        android:text="İLETİŞİM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toEndOf="@+id/btn_hakkinda"
        app:layout_constraintTop_toBottomOf="@+id/btn_sulandı"
        app:layout_constraintVertical_bias="0.308" />

</androidx.constraintlayout.widget.ConstraintLayout>